# ==========================================
# TIBOK - Configuration Environnement
# ==========================================
# Copier ce fichier vers .env.local pour développement
# ou configurer dans Vercel Dashboard pour production

# ==========================================
# OPENAI CONFIGURATION
# ==========================================
# Clé API OpenAI (obligatoire)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Modèle à utiliser (optionnel, défaut: gpt-3.5-turbo)
OPENAI_MODEL=gpt-3.5-turbo
# Alternatives: gpt-4, gpt-4-turbo-preview, gpt-3.5-turbo-16k

# Paramètres OpenAI (optionnel)
OPENAI_MAX_TOKENS=200
OPENAI_TEMPERATURE=0.7
OPENAI_TIMEOUT=25000

# ==========================================
# SECURITY CONFIGURATION
# ==========================================
# Origines autorisées pour CORS (obligatoire en production)
# Séparer par des virgules, sans espaces
ALLOWED_ORIGINS=https://tibok.mu,https://www.tibok.mu,https://app.tibok.mu

# Environnement (development | staging | production)
NODE_ENV=production

# Clé secrète pour signatures (générer avec: openssl rand -base64 32)
SECRET_KEY=your-secret-key-minimum-32-characters-long

# Rate Limiting
RATE_LIMIT_WINDOW=60000
MAX_REQUESTS_PER_WINDOW=10
MAX_REQUESTS_PER_DAY=1000

# ==========================================
# REDIS CONFIGURATION (Optionnel)
# ==========================================
# Pour cache et rate limiting avancés
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_TLS_ENABLED=false
CACHE_TTL=300000

# ==========================================
# DATABASE (Optionnel)
# ==========================================
# Pour stockage des conversations
DATABASE_URL=postgresql://user:password@localhost:5432/tibok
DATABASE_SSL=true

# ==========================================
# MONITORING & ANALYTICS
# ==========================================
# Sentry pour error tracking (optionnel)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# Google Analytics (optionnel)
GA_MEASUREMENT_ID=G-XXXXXXXXXX
GTM_ID=GTM-XXXXXXX

# LogRocket ou équivalent (optionnel)
LOGROCKET_APP_ID=your-org/your-app

# ==========================================
# PAYMENT CONFIGURATION
# ==========================================
# URL de redirection pour paiement
PAYMENT_URL=https://payment.tibok.mu
PAYMENT_SUCCESS_URL=https://tibok.mu/success
PAYMENT_CANCEL_URL=https://tibok.mu/cancel

# Juice Payment Gateway (si applicable)
JUICE_API_KEY=your-juice-api-key
JUICE_MERCHANT_ID=your-merchant-id
JUICE_ENVIRONMENT=production

# ==========================================
# EMAIL CONFIGURATION (Optionnel)
# ==========================================
# Pour notifications et confirmations
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@tibok.mu
SMTP_PASSWORD=your-email-password
EMAIL_FROM="TIBOK Support <support@tibok.mu>"

# ==========================================
# SMS CONFIGURATION (Optionnel)
# ==========================================
# Pour notifications SMS
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+23012345678

# ==========================================
# FEATURE FLAGS
# ==========================================
ENABLE_CACHE=true
ENABLE_RATE_LIMIT=true
ENABLE_EMERGENCY_DETECTION=true
ENABLE_ANALYTICS=true
ENABLE_DEBUG_LOGGING=false
ENABLE_CONVERSATION_HISTORY=true
ENABLE_AUTO_TRANSLATION=false
ENABLE_VOICE_SUPPORT=false

# ==========================================
# LOCALIZATION
# ==========================================
DEFAULT_LANGUAGE=fr
SUPPORTED_LANGUAGES=fr,en,cr
TIMEZONE=Indian/Mauritius

# ==========================================
# MEDICAL COMPLIANCE
# ==========================================
MEDICAL_COUNCIL_API_KEY=your-api-key-if-required
MEDICAL_LICENSE_NUMBER=TIBOK-2024-001
COMPLIANCE_MODE=strict

# ==========================================
# BACKUP & RECOVERY
# ==========================================
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400000
BACKUP_RETENTION_DAYS=30
S3_BACKUP_BUCKET=tibok-backups
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=eu-west-3

# ==========================================
# DEVELOPMENT ONLY
# ==========================================
# Ne pas utiliser en production
DEV_MODE=false
MOCK_OPENAI=false
DISABLE_RATE_LIMIT=false
VERBOSE_LOGGING=false
DEBUG_SQL=false

# ==========================================
# VERCEL SPECIFIC
# ==========================================
VERCEL_URL=
VERCEL_ENV=production
VERCEL_REGION=cdg1
